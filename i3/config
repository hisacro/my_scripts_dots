# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym k resize grow height 5 px or 5 ppt
        bindsym j resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+x mode "resize"

bindsym $mod+Ctrl+h resize shrink width 1 px or 1 ppt
bindsym $mod+Ctrl+k resize grow height 1 px or 1 ppt
bindsym $mod+Ctrl+j resize shrink height 1 px or 1 ppt
bindsym $mod+Ctrl+l resize grow width 1 px or 1 ppt

# hide title bar only in titling mode
# new_window 1pixel
for_window [class=".*"] border pixel 1 
# audacious neat
for_window [class="(?i)audacious"] border pixel 0
# mupdf 
for_window [class="(?i)mupdf"] border pixel 0 

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	position	bottom	
        status_command	i3status | ~/.config/i3status/i3_wrapper.py
        i3bar_command i3bar --transparency
        strip_workspace_numbers yes
	height	16
	workspace_buttons	yes
	colors{
		#blue
		#background #0F1323 
		#statusline #999EC1 
		#focused_workspace #887994 #0F1323
		#inactive_workspace #887994 #0F1323
		#neon green
		background #000000
		statusline #008000
		#                  border background foreground
		focused_workspace  #000000 #000000 #22cc16
		inactive_workspace #000000 #000000 #0c6205
		urgent_workspace   #000000 #d6ff00 #000000
	}
	#tray_output none
	#tray_padding 2
}
